<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BarcodeScanner" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorWhite</item>

        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="Theme.BarcodeScanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BarcodeScanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BarcodeScanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>